<!--Para poder acceder a la entidad de contacto-->
@model GRUD_Asp.Net.Models.Contact
@{
    ViewData["Title"] = "Editar contacto";
}

<h1 class="text-center"> Editar contacto</h1>


<!--Carta con los contactos-->
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <!--header de la carta-->
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Editar Usuario</strong></h3>
                <script>

                </script>

            </div>
            <!--Body de la carta-->
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <!--Label y input de nombre-->
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresar el nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <!--Lbael y input de Telefono-->
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ingresar el Telefono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <!--Lbael y input de Celular-->
                    <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control" placeholder="Ingresar el Celular" />
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>
                    <!--Lbael y input de Email-->
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresar el Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!--Btn enviar datos-->
                    <div class="form-floating mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi bi-pencil-fill">Editar Usuario</i></button>
                    </div>
                </form>
                <a class="btn btn-primary" asp-action="Index"><i class="bi bi-arrow-left-square mx-2 mt-1"></i>Volver</a>

            </div>
        </div>
    </div>
</div>


