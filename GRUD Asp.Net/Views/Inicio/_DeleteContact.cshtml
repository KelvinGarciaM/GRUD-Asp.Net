<!--Para poder acceder a la entidad de contacto-->
@model GRUD_Asp.Net.Models.Contact

@{
    ViewData["Title"] = "Detalles contacto";
}
<div class="row">
    <div class="offset-12">
        <div class="card border">

            <div class="card-header bg-dark">

                <h3 class="text-white">
                    <strong>Detalles contacto</strong>
                </h3>
            </div>

            <div class="card-body">
                <ul class="list-group-item">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre)</li>
                    <li class="list-group-item"><strong>Telefono: </strong>@Html.DisplayFor(m => m.Telefono)</li>
                    <li class="list-group-item"><strong>Celular: </strong>@Html.DisplayFor(m => m.Celular)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Fecha registro </strong>@Html.DisplayFor(m => m.FechaCreacion)</li>
                </ul>


                <form asp-action="Eliminar" method="post">
                    <!--Btn enviar datos-->
                    <input type="hidden" name="id" value="@Model.Id"  readonly  />
                    <div class="form-floating mt-3">
                        <button type="submit" class="btn btn-danger d-block mx-auto"><i class="bi bi-pencil-fill">Eliminar Usuario</i></button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>




